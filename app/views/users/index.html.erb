<% provide(:title, 'All users') %>
<h1>All users</h1>

<!-- Because we included will_paginate both above and below the user list, the pagination links appear in both places. -->

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
